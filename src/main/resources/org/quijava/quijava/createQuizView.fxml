<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.quijava.quijava.controllers.CreateQuizController">
   <center>
      <AnchorPane prefHeight="763.0" prefWidth="831.0">
         <children>
            <Text layoutX="404.0" layoutY="60.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Quiz">
               <font>
                  <Font size="27.0" />
               </font>
            </Text>
            <TextField fx:id="titleQuiz" layoutX="223.0" layoutY="124.0" prefHeight="36.0" prefWidth="420.0" promptText="Titulo" />
            <Button fx:id="sendImageQuiz" layoutX="223.0" layoutY="206.0" mnemonicParsing="false" onAction="#selectImage" prefHeight="36.0" prefWidth="420.0" text="Enviar imagem" />
            <TextArea fx:id="descriptionQuiz" layoutX="223.0" layoutY="270.0" prefHeight="200.0" prefWidth="421.0" promptText="Descrição" />
            <ComboBox fx:id="listCategories" layoutX="223.0" layoutY="500.0" onAction="#selectCategories" prefHeight="36.0" prefWidth="187.0" promptText="Categorias" />
            <Button fx:id="createQuiz" layoutX="559.0" layoutY="668.0" mnemonicParsing="false" onAction="#createQuiz" prefHeight="36.0" prefWidth="84.0" text="Criar" />
            <Button fx:id="back" layoutX="223.0" layoutY="668.0" mnemonicParsing="false" onAction="#goBack" text="Cancelar" />
            <ListView fx:id="listAddCategories" layoutX="221.0" layoutY="596.0" onMouseClicked="#deleteSelectedCategories" orientation="HORIZONTAL" prefHeight="44.0" prefWidth="423.0" />
            <Button fx:id="createCategory" layoutX="461.0" layoutY="500.0" mnemonicParsing="false" onAction="#createCategory" prefHeight="36.0" prefWidth="68.0" text="Criar" />
            <Button fx:id="reload" layoutX="540.0" layoutY="500.0" mnemonicParsing="false" onAction="#loadCategories" prefHeight="36.0" prefWidth="103.0" text="Recarregar" />
            <Text  layoutX="221.0" layoutY="585.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Categorias do quiz" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
